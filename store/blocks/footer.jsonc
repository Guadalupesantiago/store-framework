{
  "footer": {
    "blocks": ["footer-layout.desktop"]
  },
  "footer-layout.desktop": {
    "children": ["flex-layout.row#footer-1-desktop"]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#footer-left-desktop",
      "flex-layout.col#footer-right-desktop"
    ],
    "props": {
      "blockClass": "footer-row",
      "paddingTop": 7,
      "paddingBottom": 7
    }
  },
  "flex-layout.col#footer-left-desktop": {
    "children": ["accepted-payment-methods", "powered-by"]
  },
  "flex-layout.col#footer-right-desktop": {
    "children": ["social-networks"]
  },
  "social-networks": {
    "props": {
      "showInColor": true,
      "socialNetworks": [
        { "url": "https://facebook.com/", "name": "Facebook" },
        { "url": "https://instagram.com/", "name": "Instagram" },
        { "url": "https://twitter.com/", "name": "Twitter" }
      ]
    }
  },

  "accepted-payment-methods": {
    "props": {
      "showInColor": true,
      "paymentMethods": ["Mastercard", "Visa", "Diners Club"]
    }
  }
}
